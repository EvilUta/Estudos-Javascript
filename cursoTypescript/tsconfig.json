{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "dist",
        "module": "nodenext",
        "target": "esnext",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
